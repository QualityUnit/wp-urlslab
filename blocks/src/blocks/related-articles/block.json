{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "urlslab-blocks/related-articles",
	"title": "Related Articles",
	"description": "Shows articles related to defined url.",
	"category": "urlslab-blocks",
	"textdomain": "urlslab",
	"attributes": {
		"url": {
			"type": "string",
			"default": ""
		},
		"relatedCount": {
			"type": "number",
			"default": 6
		},
		"showSummary": {
			"type": "boolean",
			"default": true
		},
		"showImage": {
			"type": "boolean",
			"default": true
		},
		"imageSize": {
			"type": "string",
			"default": "carousel-thumbnail"
		},
		"defaultImage": {
			"type": "string",
			"default": ""
		}
	},
	"editorScript": "urlslab-related-articles-block",
	"editorStyle": "urlslab-related-articles-editor",
	"style": "urlslab-related-articles-block-style"
}